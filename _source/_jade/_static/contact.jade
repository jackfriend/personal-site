.container.contact-container
    .wrapper.contact-wrapper
        .form
            .form-header
                a(href="#").fa.fa-times
                h1 Contact Me
                p Feel free to drop a suggestion, comment, question or even potential business requests below.
            .form-body
                form(action="https://formspree.io/jackwilliamfriend@gmail.com", method="POST")
                    input(type="text", name="name", placeholder="Your name")
                    input(type="email", name="_replyto", placeholder="Your email")
                    textarea(name="content")
                    input(type="submit", value="Send")
