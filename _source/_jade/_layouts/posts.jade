    body
        .container.post-container
            h1 {{ page.title }}
            <i class="author">By {{ page.author }} on {{ page.date | date: '%B %d, %Y' }}</i>
            | {{ content }}
        .footer
            .logo: a(href="../../../../index.html").logo-anc
                img(src="../../../../assets/img/favicon.png", alt="Favicon").favicon
                a(href="#").title-string
                    p.insult
                    p.reply <i class="em em-stuck_out_tongue_closed_eyes"></i>
            .prev-next
                | {% if page.next != nil%}
                a(href="{{ page.next.url }}"): <i class="ion ion-arrow-left-c"></i>
                | {% endif %}
                | {% if page.previous != nil %}
                a(href="{{ page.previous.url }}"): <i class="ion ion-arrow-right-c"></i>
                | {% endif %}

        script(src="https://code.jquery.com/jquery-2.2.0.min.js")
