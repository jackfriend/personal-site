doctype
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
    link(rel="stylesheet", href="../assets/index.css")
    title {{ page.title }}
  body
    .container.post-container
      | {{ content }}
    .footer
      .logo: a(href="#").logo-anc
        img(src="../assets/img/favicon.png", alt="Favicon").favicon
      .prev-next
        a(href="#"): <i class="ion ion-arrow-left-c"></i>
        a(href="#"): <i class="ion ion-arrow-right-c"></i>
      
    script(src="https://code.jquery.com/jquery-2.2.0.min.js")
    script(src="https://npmcdn.com/masonry-layout@4.0/dist/masonry.pkgd.min.js")
    script(src="../assets/functions.js")
